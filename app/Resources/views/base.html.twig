<!DOCTYPE html>
<html class="no-js">
    <head>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
        	<link href="{{ asset('build/styles.css') }}" rel="stylesheet" />
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        <script src="{{ asset('js/modernizr-custom.js') }}"></script>
        {% block head %}{% endblock %}
    </head>
    <body>
    	<div class="notNav">
			<header>
				<p>Voices for Earth Justice<p>
			</header>
			<main class="main-content">
				<button class="off-canvas-launcher">&#9776; Menu</button>
				{% block main %}{% endblock %}
			</main>
		</div>
		<nav class="navigation-menu">
			{% block nav %}
			{{ render(controller('AppBundle:NavFooter:NavFooter')) }}
			{% endblock %}
		</nav>
		<footer>
			<div class="footerContent">
				<p>Copyright Â© 2016 Voices for Earth Justice, nonprofit 501(c)(3). All Rights Reserved.</p>
				<p>Mailing address: 21695 Rougewood Dr., Southfield, MI 48033 Email: voices4earth@juno.com Phone: (248) 351-9001</p>
			</div>
		</footer>
        {% block javascripts %}
            <script src="{{ asset('js/jquery.js') }}"></script>
			<script src="{{ asset('js/jquery.maskedinput.js') }}"></script>
			<script src="{{ asset('js/menuShow.js') }}"></script>
			<script type='text/javascript' id="__bs_script__">//<![CDATA[
    document.write("<script async src='http://HOST:8001/browser-sync/browser-sync-client.2.11.1.js'><\/script>".replace("HOST", location.hostname));
//]]></script>
			<script>
				var s = $( "html" ).scrollTop();
				var a = $(".navigation-menu").offset().top;
				//window.alert(s);
				if ($(window).width() >= 1140) { 
					$(document).ready(function(){
						if(s <= 10){   
						   $('.navigation-menu').css({"background-color":"transparent"});
						   $('.navigation-menu').css({"transition":"background-color .25s"});
						   //$('.navigation-menu').css({"box-shadow":"none"});
						} else {
						   $('.navigation-menu').css({"background-color":"#3b0066"});
						   //$('.navigation-menu').css({"box-shadow":"#1a1a1a"});
						}
					});

					$(document).scroll(function(){
						if($(this).scrollTop() > 10)
						{   
						   $('.navigation-menu').css({"background-color":"#3b0066"});
						   $('.navigation-menu').css({"transition":"background-color .25s"});
						 //  $('.navigation-menu').css({"box-shadow":"#1a1a1a"});
						} else {
						   $('.navigation-menu').css({"background-color":"transparent"});
						 //  $('.navigation-menu').css({"box-shadow":"none"});
						}
					});
				}
				
				$(window).resize(function(){
					if ($(window).width() < 1140) { 
						   $('.navigation-menu').css({"background-color":"#3b0066"});
						} else {
							if(s <= 10){   
							   $('.navigation-menu').css({"background-color":"transparent"});
							   $('.navigation-menu').css({"transition":"background-color .25s"});
							   //$('.navigation-menu').css({"box-shadow":"none"});
							} else {
							   $('.navigation-menu').css({"background-color":"#3b0066"});
							   //$('.navigation-menu').css({"box-shadow":"#1a1a1a"});
							}

						$(document).scroll(function(){
							if($(this).scrollTop() > 10)
							{   
							   $('.navigation-menu').css({"background-color":"#3b0066"});
							   $('.navigation-menu').css({"transition":"background-color .25s"});
							 //  $('.navigation-menu').css({"box-shadow":"#1a1a1a"});
							} else {
							   $('.navigation-menu').css({"background-color":"transparent"});
							 //  $('.navigation-menu').css({"box-shadow":"none"});
							}
						});	
					}
					});
				
			</script>
        {% endblock %}
    </body>
</html>
