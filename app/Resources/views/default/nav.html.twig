
<ul class="nav">

{% for parentPage in parentPages %}
	{% if parentPage.title in parentPageNames %}
		<li class="nav"><a href="{{ path('index', {'slug': parentPage.slug}) }}" class="dropbtn">{{ parentPage.title }}</a></li>
			<ul>
			{% for childPage in childPages %}
				{% if childPage.parentPage == parentPage.title %}
					<li class="nav"><a href="{{ path('index', {'slug': childPage.slug}) }}">{{ childPage.title }}</a></li>
				{% endif %}
			{% endfor %}
			</ul>
	{% else %}
	  	<li class="nav"><a href="{{ path('index', {'slug': parentPage.slug}) }}">{{parentPage.title}}</a></li>
	{% endif %}
{% endfor %}

</ul>
